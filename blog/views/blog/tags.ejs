<%- include header %>
<div class="container">
    <div class="container">
        <br />
        <form class="form-horizontal" role="form">
            <div class="form-group" align="center">
                <h3 for="name" class="col-sm-2  control-label">新增Tags</h3>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">标签内容</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="tag-content" value="default" placeholder="请输入标签内容" oninput="OnInput('tag-button', 'tag-content')" onchange="changeText('tag-button', 'tag-content')" required>
