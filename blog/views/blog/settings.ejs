<%- include header %>
<div class="container">
    <!-- Top menu -->
    <!-- Top content -->
    <div class="top-content">
        <div class="inner-bg">
            <div class="container">

                <div class="row">
                    <div class="col-xs-8 col-sm-offset-2 form-box">

                        <form role="form" action="" method="post" class="registration-form">
                            <div class="form-top">
                                <div style="padding-top: 1em;" align="center">
                                    <img width="200px" height="200px" style="border-radius: 500px"  src="/images/2.jpg" class="img-thumbnail "/>
                                    <input type="file" name="avater" />
                                </div>
                            </div>
                            <div class="form-bottom">
                                <div class="form-group" align="center">
                                    <label class="col-sm-2 control-label">姓名：</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="name" class="form-control" readonly>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group" align="center">
                                    <label class="col-sm-2 control-label">出生日期：</label>
                                    <div class="col-sm-10">
                                        <div class="input-group">
                                            <select class="form-control" name="year">
                                                <option>-----</option>
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select>
                                            <span class="input-group-addon">年</span>
                                            <select class="form-control" name="month">
                                                <option>1</option>
                                                <option>2</option>
                                                <option selected="selected">3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select>
                                            <span class="input-group-addon">月</span>
                                            <select class="form-control" name="day">
                                                <option>-----</option>
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select>
                                            <span class="input-group-addon">日</span>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group" align="center">
                                    <label class="col-sm-2 control-label">身高：</label>
                                    <div class="col-sm-4">
                                        <div class="input-group">
                                            <input type="text" class="form-control"  name="height">
                                            <span class="input-group-addon">cm</span>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group" align="center">
                                    <label class="col-sm-2 control-label" name="weight">体重：</label>
                                    <div class="col-sm-4">
                                        <div class="input-group">
                                            <input type="text" class="form-control">
                                            <span class="input-group-addon">kg</span>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group" align="center">
                                    <label class="col-sm-2 control-label">爱好：</label>
                                    <div class="col-sm-10">
                                        <div class="input-group">
                                            <span class="input-group-addon">1.</span>
                                            <input type="text" class="form-control" name="hobby1">
                                            <span class="input-group-addon">2.</span>
                                            <input type="text" class="form-control" name="hobby2">
                                            <span class="input-group-addon" >3.</span>
                                            <input type="text" class="form-control" name="hobby3">
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group" align="center">
                                    <label class="col-sm-2 control-label">邮箱：</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="email" class="form-control">
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <div class="form-group" align="center">
                                        <label class="col-sm-2 control-label">我的签名：</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" rows="3" name="signature"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <br /><br /><br />
                                <button type="submit" class="btn btn-info">保存</button>
                            </div>

                            <!-- Javascript -->
                            <script>$(function ()
                                { $("[data-toggle='popover']").popover();
                                });
                            </script>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<br /><br />
<%- include footer %>