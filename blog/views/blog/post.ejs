<%- include header %>
<div class="container">
    <form class="form-horizontal" method="post" role="form" >
        <br /><br />
        <div class="form-group">
            <label for="firstname" class="col-sm-2 control-label">博文标题:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="title" required>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">博文标签：</label>
            <div class="col-sm-10" id="blog-tags">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">已有标签：</label>
            <div class="col-sm-10">
                <% tags.forEach(function (tag) { %>
                    <button id=<%= tag.id %> type="button" class="btn <%= tag.style %>"  style="margin-top: 1em" onclick="selectTag('<%= tag.id %>')"><%= tag.content %></button>
                <% }) %>
            </div>
        </div>

        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">正文:</label>
            <div class="col-sm-10">
                <br /><textarea class="form-control" rows="20" cols="100" name="post" id="content" required></textarea>
            </div>
        </div>

        <div id="submit-id">

        </div>

        <div class="form-group">
            <label for="name" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <br /><button type="submit" class="btn btn-info col-sm-1">发表</button>
                <a href="#" ><button type="button" class="btn btn-info col-sm-1 col-sm-offset-1" onclick="postPreview()">预览</button></a>
            </div>
        </div>
    </form>
</div>
<br /><br />

<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    文章预览
                </h4>
            </div>

            <div class="modal-body">
                <!--<input id="name" type="text" rows="3" class="form-control" name="content" placeholder="请输入回复内容..." required>-->
                <p id="m-content">正文</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal -->
</div>

<%- include footer %>