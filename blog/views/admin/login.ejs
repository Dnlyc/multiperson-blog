<%- include header %>
<div class="container">
    <div class="row" align="center">
        <div class="col-lg-12">
            <form method="post" class="bootstrap-admin-login-form">
                <h1>登录</h1>
                <% if(error) { %><div class="alert alert-danger"><%= error %></div><% } %>
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="账号" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="密码" required>
                </div>
                <button class="btn btn-lg btn-primary" type="submit">登陆</button>
            </form>
        </div>
    </div>
</div>
<%- include footer %>

