<%- include header %>
<%- include leftbar %>
<!-- content -->
<div class="col-md-10">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header bootstrap-admin-content-title">
                <h1>博文管理</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">博文</div>
                </div>
                <div class="bootstrap-admin-panel-content">
                    <table class="table bootstrap-admin-table-with-actions">
                        <colgroup>
                            <col style="width:100px">
                            <col style="width:200px">
                            <col style="width:700px">
                            <col style="width:200px">
                            <col style="width:200px">
                            <col style="width:200px">
                            <col style="width:200px">
                            <col style="width:200px">
                            <col style="width:400px">
                        </colgroup>
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>博文标题</th>
                            <th>博文正文</th>
                            <th>博主</th>
                            <th>原|转</th>
                            <th>阅读</th>
                            <th>评论</th>
                            <th>发布日期</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <% for (var i = 0; i < posts.length; i++)  { %>
                        <tbody>
                            <td><%= (page - 1) * 10 + (i + 1) %></td>
                            <td><%= posts[i].title %></td>
                            <td><%= posts[i].post.html %></td>
                            <td><%= posts[i].name %></td>
                            <td><% if (posts[i].transfer) { %> 转载 <% } else { %> 原创 <% } %></td>
                            <td><%= posts[i].pv %></td>
                            <td><%= posts[i].c_num %></td>
                            <td><%= posts[i].time.day %></td>
                            <td>
                                <a href="#" onclick="previewModel('<%= posts[i].title %>')">
                                    查看 |
                                </a>
                                <a href="/main/posts/remove/<%= posts[i].title %>/<%= posts[i].time.day %>/<%= posts[i].name %>" style="color: red">
                                    删除
                                </a>
                            </td>
                        </tbody>
                        <%  } %>
                    </table>
                </div>
            </div>

            <div class="col-lg-12" align="center">
                <ul class="pagination">
                    <li>
                        <a href="#" onclick="searchAnnouncements(1)">
                            <span>&laquo;&laquo;</span>
                        </a>
                    </li>
                    <% if (page != 1) { %>
                    <li>
                        <a href="#" onclick="searchAnnouncements(<%= (page - 1) %>)" aria-label="<">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <% } %>
                    <% for(var i = 0; i < total.length; i++)  { %>
                    <li <% if(i == page - 1) { %> class="active" <% } %>><a href="#" onclick="searchAnnouncements(<%= total[i] %>)" ><%= total[i] %></a></li>
                    <% } %>
                    <% if (page != total[total.length - 1]) { %>
                    <li>
                        <a href="#" onclick="searchAnnouncements(<%= (page + 1) %>)" aria-label=">">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    <% } %>
                    <li>
                        <a href="#" onclick="searchAnnouncements(<%= total[total.length - 1] %>)" aria-label=">>">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</div>
</div>
</div>

<%- include announcements_model %>
<%- include footer %>
