<%- include header %>
<%- include leftbar %>
<!-- content -->
<div class="col-md-10">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header bootstrap-admin-content-title">
                <h1>博主管理</h1>
            </div>
        </div>
    </div>

    <form id="form" class="form-inline" role="form" method="post" style="margin-top: 1em;margin-bottom: 1em">
        <div class="form-group">
            <label for="name">昵称:</label>
            <input type="text" class="form-control" name="name" value="<% if (search.name) { %><%= search.name %><% } %>">
        </div>
        <button type="submit" class="btn btn-info" style="margin-left: 1em;">查找</button>
    </form>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">博主信息</div>
                </div>
                <div class="bootstrap-admin-panel-content">
                    <table class="table bootstrap-admin-table-with-actions">
                        <colgroup>
                            <col style="width:100px">
                            <col style="width:200px">
                            <col style="width:200px">
                            <col style="width:1000px">
                            <col style="width:200px">
                            <col style="width:200px">
                        </colgroup>
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>昵称</th>
                            <th>邮件</th>
                            <th>个性签名</th>
                            <th>出生日期</th>
                            <th>博客浏览</th>
                        </tr>
                        </thead>
                        <% if (users.length === 0) { %>
                        <tbody>
                            <td /><td /><td /><td>没有相关结果....</td>
                        </tbody>
                        <% } %>
                        <% for (var i = 0; i < users.length; i++)  { %>
                        <tbody>
                            <td><%= (page - 1) * 10 + (i + 1) %></td>
                            <td><%= users[i].name %></td>
                            <td><%= users[i].email %></td>
                            <td><%= users[i].signature %></td>
                            <td><%= users[i].birthday %></td>
                            <td><%= users[i].pv %></td>
                        </tbody>
                        <%  } %>
                    </table>
                </div>
            </div>

            <div class="col-lg-12" align="center">
                <ul class="pagination">
                    <li>
                        <a href="#" onclick="sumbitPage('bloggers', 1)">
                            <span>&laquo;&laquo;</span>
                        </a>
                    </li>
                    <% if (page != 1) { %>
                    <li>
                        <a href="#" onclick="sumbitPage('bloggers', <%= (page - 1) %>)" aria-label="<">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <% } %>
                    <% for(var i = 0; i < total; i++)  { %>
                    <li <% if(i == page - 1) { %> class="active" <% } %>><a href="#" onclick="sumbitPage('bloggers', <%= i + 1 %>)" ><%= i + 1 %></a></li>
                    <% } %>
                    <% if (page != total) { %>
                    <li>
                        <a href="#" onclick="sumbitPage('bloggers', <%= (page + 1) %>)" aria-label=">">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    <% } %>
                    <li>
                        <a href="#" onclick="sumbitPage('bloggers', <%= total %>)" aria-label=">>">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</div>
</div>
</div>

<%- include announcements_model %>
<%- include footer %>
