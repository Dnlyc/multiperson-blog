<%- include header %>
<div class="content">
    <div class="content_resize">

        <div id="myCarousel" class="carousel slide">
            <!-- 轮播（Carousel）项目 -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="/images/1_2.jpg" height="100%" width="100%" alt="First slide">
                    <div class="banner-title">
                        <div class="container">
                            <div  id="top" class="callbacks_container">
                                <ul class="rslides" id="slider3">
                                    <li><h1>Molestias excepturi sintprovident</h1></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="/images/blog_default_background.jpg" height="100%" width="100%" alt="Second slide">
                    <div class="banner-title">
                        <div class="container">
                            <div  id="top" class="callbacks_container">
                                <ul class="rslides" id="slider3">
                                    <li><h1>Two excepturi sintprovident</h1></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="/images/1_2.jpg" height="100%" width="100%" alt="Third slide">
                    <div class="banner-title">
                        <div class="container">
                            <div  id="top" class="callbacks_container">
                                <ul class="rslides" id="slider3">
                                    <li><h1>Third excepturi sintprovident</h1></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="/images/blog_default_background.jpg" height="100%" width="100%" alt="Second slide">
                    <div class="banner-title">
                        <div class="container">
                            <div  id="top" class="callbacks_container">
                                <ul class="rslides" id="slider3">
                                    <li><h1>Four excepturi sintprovident</h1></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 轮播（Carousel）导航 -->
            <a class="carousel-control left" href="#myCarousel"
               data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#myCarousel"
               data-slide="next">&rsaquo;</a>
        </div>
        <br />

        <div class="mainbar">
            <% posts.forEach(function (post) { %>
            <div class="article">
                <h2><span><%= post.title %></span></h2>
                <div class="clr"></div>
                <p>博主:<a href="/space/<%= post.name %>"><%= post.name %></a>,日期:<%= post.time.day %>,评论:18</p>
                <div class="clr"></div>
                <p><%= post.post.html %></p>
               <p><a href="/space/blog/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">阅读全文</a></p>
            </div>
            <% }) %>
            <div class="article" style="padding:5px 20px 2px 20px; background:none; border:0;" align="center">
                <ul class="pagination">
                    <li>
                        <a href="/page/1" aria-label="<<">
                            <span aria-hidden="true">&laquo;&laquo;</span>
                        </a>
                    </li>
                    <% if (page != 1) { %>
                    <li>
                        <a href="/page/<%= (page - 1) %>" aria-label="<">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <% } %>
                    <% for(var i = 0; i < total; i++)  { %>
                    <li <% if(i == page - 1) { %> class="active" <% } %>><a href="/page/<%= i+1 %>" ><%= i + 1 %></a></li>
                    <% } %>
                    <% if (page != total) { %>
                    <li>
                        <a href="/page/<%= (page + 1) %>" aria-label=">">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    <% } %>
                    <li>
                        <a href="/page/<%= total %>" aria-label=">>">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                </ul>
                </p>
            </div>
        </div>
<%- include rightbar %>
<%- include footer %>