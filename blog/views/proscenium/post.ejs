<%- include header %>
<form method="post">

    <div class="form-group">
        <label for="name">标题:</label>
        <div class="col-sm-20">
            <input type="text" class="form-control" name="title">
        </div>
    </div>

    <div class="form-group">
        <label for="name">正文:</label>
        <textarea class="form-control" rows="20" cols="100" name="post"></textarea>
    </div>
    <div class="form-group">
        <div class="col-xs-5">
            <button type="submit" class="btn btn-info col-sm-3">发表</button>
        </div>
    </div>

</form>
<%- include footer %>