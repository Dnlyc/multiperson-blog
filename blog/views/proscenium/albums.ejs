<%- include header %>
<div class="content">
    <div class="content_resize">
        <div class="container" style="width: auto" align="center" id="container">
            <h1>精彩相册</h1>
            <br />

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="text-muted bootstrap-admin-box-title">&nbsp;</div>
                        </div>
                        <div class="bootstrap-admin-panel-content">
                            <% for(var i = 0; i < albums.length; i++) { %>
                                <% if (i % 3 == 0) { %>
                                    <div class="row bootstrap-admin-light-padding-bottom">
                                <% } %>
                                        <div class="col-md-4">
                                            <a href="/space/<%= albums[i].name %>/albums/<%= albums[i].id %>" class="thumbnail">
                                                <img title="<%= albums[i].title %>" data-src="holder.js/260x180" alt="260x180" style="width: 260px; height: 180px;" src="/images<% if (!!!albums[i].photos || albums[i].photos.length === 0) { %>/default_albums_bg.jpg<% } else { %><%= albums[i].photos[0] %><% } %>">
                                            </a>
                                            <p>博主：<a href="/space/<%= albums[i].name %>"> <%= albums[i].name %> </a></p>
                                            <p>日期：<%= albums[i].day.day %></p>
                                        </div>
                                <% if (i % 3 == 2 || i == albums.length) { %>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="article" style="padding:5px 20px 2px 20px; background:none; border:0;" align="center">
                <ul class="pagination">
                    <li>
                        <a href="#" onclick="searchPostsOrAlbums(1)">
                            <span>&laquo;&laquo;</span>
                        </a>
                    </li>
                    <% if (page != 1) { %>
                    <li>
                        <a href="#" onclick="searchPostsOrAlbums(<%= (page - 1) %>)" aria-label="<">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <% } %>
                    <% for(var i = 0; i < total.length; i++)  { %>
                    <li <% if(i == page - 1) { %> class="active" <% } %>><a href="#" onclick="searchPostsOrAlbums(<%= total[i] %>)" ><%= total[i] %></a></li>
                    <% } %>
                    <% if (page != total[total.length - 1]) { %>
                    <li>
                        <a href="#" onclick="searchPostsOrAlbums(<%= (page + 1) %>)" aria-label=">">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    <% } %>
                    <li>
                        <a href="#" onclick="searchPostsOrAlbums(<%= total[total.length - 1] %>)" aria-label=">>">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                </ul>
                </p>
            </div>
        </div>
    </div>
</div>
<%- include footer %>